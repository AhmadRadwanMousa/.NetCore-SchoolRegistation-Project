@{
}
@model List<SchoolRegistration.Models.EmployeeModel>

    <html >
    <head>
        <link rel="stylesheet" type="text/css" sty href="~/css/GetAllStudent.css" />
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
        <script src="https://kit.fontawesome.com/788a2928ef.js" crossorigin="anonymous"></script>
        <title></title>
    </head>
    <body>
        <div class="container-fluid main-holder">
            <table class="table table-dark table-striped">
                <thead>
                    <tr>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Age</th>
                        <th>Phone Number</th>
                        <th>Qualification</th>
                        <th>Job Title</th>
                        <th>Salary</th>
                        <th>Join Date </th>
                        <th>Edit</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (SchoolRegistration.Models.EmployeeModel item in Model)
                    {
                        
                       
                    <tr>
                        <td>@item.FirstName</td>
                        <td>@item.LastName</td>
                        <td>@item.Age</td>
                        <td>@item.PhoneNumber</td>
                        <td>@item.Qualification</td>
                        <td>@item.CatagoryName</td>
                        <td>@item.Salary</td>
                        <td>@item.JoinDate</td>

                        <td>
                            <a class="fa-solid fa-edit" asp-controller="Employee" id="T2" asp-action="UpdateEmp" asp-route-ID="@item.EmployeeID"></a>
                        </td>
                        <td>
                            <a class="fa-solid fa-trash" asp-controller="Employee" id="T1" asp-action="Delete" asp-route-ID="@item.EmployeeID"></a>
                        </td>



                    </tr>
                  }
                  

                </tbody>
                <tfoot>
                    <tr class="record">
                        <td>Records :@Model.Count()</td>
                    </tr>
                </tfoot>
            </table>

        </div>

    
    </body>
    </html>