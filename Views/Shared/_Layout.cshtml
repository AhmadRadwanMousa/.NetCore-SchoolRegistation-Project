<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SchoolRegistration</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">  
    <link type="text/css" href="~/css/site.css" />
</head>
<body >
   
        <nav class="navbar navbar-expand-lg bg-ligh">
            <div class="container-fluid">
                <a class="navbar-brand" style="color:black; font-weight:500;">Lamza</a>
                <button class="navbar-toggler"
                        type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#navbarNavDropdown"
                        aria-controls="navbarNavDropdown"
                       
                        aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNavDropdown">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link link-secondary" aria-current="page"  asp-controller="Employee"
                                       asp-action="AddNewEmployee">Home</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle link-secondary"
                               role="button"
                               data-bs-toggle="dropdown"
                               >
                                Employee Page
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a class="dropdown-item"
                                       asp-controller="Employee"
                                       asp-action="AddNewEmployee">Add New Employee</a>
                                </li>
                                <li>
                                    <a class="dropdown-item"
                                       asp-controller="Employee"
                                       asp-action="GetAllEmployee">Get All Employee Information</a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle link-secondary"
                               role="button"
                               data-bs-toggle="dropdown"
                             >
                                Student Page
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a class="dropdown-item"
                                       asp-controller="Student"
                                       asp-action="AddNewStudent">Add New Student</a>
                                </li>
                                <li>
                                    <a class="dropdown-item"
                                       asp-controller="Student"
                                       asp-action="GetAllStudent">
                                        Get All Student Inforamtion
                                    </a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
     
 
   
            @RenderBody()
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
