@{
}
@model SchoolRegistration.Models.EmployeeModel
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" href="~/css/AddEmployeePage.css" />
    <title>AddNewEmployee</title>
</head>
<body>
  
    <div class="container main-holder">
        <div class="row">
            <div class="col-sm-6 image"
                 style="padding-left: 0px; padding-right: 0px">
                <div class="img-fluid image-holder"></div>
            </div>
            <div class="col-sm-6 register">
                <form class="emp-form" asp-action="AddEmployee">
                    <div class="Text">Add Employee Form</div>
                    <div class="first-sec">
                        <div class="form-outline">
                            <input type="text"
                                   id="form3Example1m"
                                   class="form-control form-control-sm"
                                   placeholder="First name"
                                   required
                                   asp-for="FirstName" />
                        </div>
                        <div class="form-outline">
                            <input type="text"
                                   id="form3Example1m"
                                   class="form-control form-control-sm"
                                   placeholder="Last name"
                                   required
                                   asp-for="LastName" />
                        </div>
                    </div>
                    <div class="first-sec">
                        <div class="form-outline">
                            <input id="form3Example1m"
                                   class="form-control form-control-sm"
                                   placeholder="Age"
                                   asp-for="Age" />
                        </div>
                        <div class="form-outline">
                            <input id="form3Example1m"
                                   class="form-control form-control-sm"
                                   placeholder="Salary"
                                   required
                                   asp-for="Salary" />
                        </div>
                    </div>
                    <div class="second-sec">
                        <div class="form-outline">
                            <input type="text"
                                   id="form3Example1m"
                                   class="form-control form-control-sm"
                                   placeholder="Phone Number"
                                   required
                                   asp-for="PhoneNumber" />
                        </div>
                        <div class="form-outline">
                            <input type="text"
                                   id="form3Example1m"
                                   class="form-control form-control-sm"
                                   placeholder="Qualification"
                                   required asp-for="Qualification" />
                        </div>
                        <div class="">
                            <select class="form-select" aria-label="Default select example"
                                    asp-for="CatagoryID" asp-items="@(new SelectList(ViewBag.Category,"CatagoryId","CatagoryName"))">
                                <option>Job Title</option>
                            </select>
                        </div>
                        <div class="sm-form sm-outline input-with-post-icon datepicker">
                            <label for="startDate" id="l1">Join Date</label>
                            <input class="form-control" type="date" required asp-for="JoinDate" />
                        </div>
                    </div>
                    <div class="submit-button">
                        <button type="submit" class="btn btn-outline-secondary">
                            Submit
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

</body>
</html>
