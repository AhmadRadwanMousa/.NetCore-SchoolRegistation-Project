@model List<SchoolRegistration.Models.StudentModel>

<html>
<head>
    <link rel="stylesheet" type="text/css" sty href="~/css/GetAllStudent.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://kit.fontawesome.com/788a2928ef.js" crossorigin="anonymous"></script>
    <title></title>
</head>
<body>
    <div class="container-fluid main-holder">
        <table class="table table-dark table-striped">
            <thead>
                <tr>
                    <th>Student Name</th>
                    <th>Student Age</th>
                    <th>Father Phone</th>
                    <th>Medical Issues</th>
                    <th>Discount</th>
                    <th>Subject Name</th>
                    <th>Edit</th>
                    <th>Delete</th>

                </tr>
            </thead>
            <tbody>
                @foreach (SchoolRegistration.Models.StudentModel item in Model)
                {


                    <tr>
                        <td>@item.StudentName</td>
                        <td>@item.StudentAge</td>
                        <td>@item.FatherMobile</td>
                        <td>@item.MedicalIssues</td>
                        <td>@item.Discount  %</td>
                        <td>@item.SubjectName</td>
                        <td>
                            <a class="fa-solid fa-edit " asp-controller="Student" id="T2" asp-action="UpdateStudent" asp-route-ID="@item.StudentID"></a>
                        </td>
                        <td>
                            <a class="fa-solid fa-trash" asp-controller="Student" id="T1" asp-action="Delete" asp-route-ID="@item.StudentID"></a>

                        </td>

                    </tr>

                }

            </tbody>
            <tfoot>
                <tr class="record">
                    <td>Records :@Model.Count()</td>
                </tr>
            </tfoot>
        </table>

    </div>
 

</body>
</html>